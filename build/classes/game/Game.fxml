<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.GameController">

    <top>
        <Label text="نقشه بازی"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 24px; -fx-padding: 10;"/>
    </top>

    <center>
        <GridPane fx:id="mapGrid"
                  hgap="2" vgap="2"
                  alignment="CENTER"
                  GridPane.halignment="CENTER"
                  style="-fx-background-color: lightgray; -fx-padding: 10;">
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
            <Button text="شروع بازی" onAction="#handleStart"/>
            <Button text="تنظیمات" onAction="#handleSettings"/>
            <Button text="خروج" onAction="#handleExit"/>
        </HBox>
    </bottom>

</BorderPane>
